---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const links = [
  { label: 'GitHub', href: 'https://github.com/Moulders26' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/in/matthew-mould-a8518b83/' },
  { label: 'Email', href: 'mailto:matt@emould.net' },
];

const infoCards = [
  {
    title: 'Work',
    body: 'I work in Enterprise IT mainly Microsoft 365, mostly focused on automation, endpoint management, and keeping things running when they’d really rather not.',
  },
  {
    title: 'Homelab',
    body: 'At home I run a Debian server with Dockerised services for media, backups, monitoring and more. It’s my main playground for trying new tools and breaking things safely.',
  },
  {
    title: 'House & life',
    body: 'Offline, I’m slowly renovating our home – loft conversion, kitchen redesign, lighting, insulation – and trying to keep everything vaguely functional for the family.',
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={eMould} description={Matt's Family homepage} />
  </head>
  <body>
    <Header />
    <main class="page">
      <section class="hero">
        <h1 class="hero__title">Matt Mould</h1>
        <p class="hero__tagline">
          Enterprise IT, homelab tinkering and ongoing DIY enthusiastic.
        </p>
        <p class="hero__intro">
          emould.net is our personal family domain. Publicly it’s just a simple calling card, and a place for me to park a few notes about the things I build and break.
        </p>

        <div class="links">
          {links.map((link) => (
            <a href={link.href} class="link-pill">
              {link.label}
            </a>
          ))}
        </div>
      </section>

      <section class="cards" aria-label="At a glance">
        {infoCards.map((card) => (
          <article class="card">
            <h2 class="card__title">{card.title}</h2>
            <p class="card__body">{card.body}</p>
          </article>
        ))}
      </section>

      <section class="card family">
        <h2 class="card__title">Family area</h2>
        <p class="card__body">
          We use emould.net for family email and a small private site for photos, notes and planning.
          If you’re family, use the link below to sign in.
        </p>
        <a href="https://family.emould.net" class="primary-button">
          Family login
        </a>
      </section>
    </main>
    <Footer />

    <style>
      .page {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1.5rem 3rem;
      }

      .hero {
        text-align: left;
        margin-bottom: 2.5rem;
      }

      .hero__title {
        font-size: clamp(2.2rem, 4vw, 2.8rem);
        margin-bottom: 0.25rem;
      }

      .hero__tagline {
        font-size: 1rem;
        opacity: 0.8;
        margin-bottom: 1rem;
      }

      .hero__intro {
        margin-bottom: 1.5rem;
        line-height: 1.5;
      }

      .links {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
      }

      .link-pill {
        display: inline-block;
        padding: 0.45rem 0.9rem;
        border-radius: 999px;
        border: 1px solid rgba(0, 0, 0, 0.12);
        text-decoration: none;
        font-size: 0.9rem;
      }

      .link-pill:hover,
      .link-pill:focus-visible {
        border-color: rgba(0, 0, 0, 0.25);
      }

      .cards {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        margin-bottom: 2rem;
      }

      @media (min-width: 700px) {
        .cards {
          grid-template-columns: repeat(3, minmax(0, 1fr));
        }
      }

      .card {
        border-radius: 0.75rem;
        border: 1px solid rgba(0, 0, 0, 0.08);
        padding: 1rem 1.1rem;
        background: rgba(0, 0, 0, 0.01);
      }

      .card__title {
        font-size: 1rem;
        margin-bottom: 0.4rem;
      }

      .card__body {
        font-size: 0.95rem;
        line-height: 1.5;
        margin: 0;
      }

      .family {
        margin-bottom: 2rem;
      }

      .primary-button {
        display: inline-block;
        margin-top: 0.9rem;
        padding: 0.55rem 1.1rem;
        border-radius: 999px;
        text-decoration: none;
        font-size: 0.9rem;
        border: 1px solid rgba(0, 0, 0, 0.15);
      }

      .primary-button:hover,
      .primary-button:focus-visible {
        border-color: rgba(0, 0, 0, 0.3);
      }
    </style>
  </body>
</html>
